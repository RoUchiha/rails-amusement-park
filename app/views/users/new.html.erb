

<%= form_for @user do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name%>
    <br>
    <%= f.label :height %>
    <%= f.number_field :height %>
    <br>
    <%= f.label :happiness, "Scale of 1 to 5" %>
    <%= f.number_field :happiness %>
    <br>
    <%= f.label :nausea, "Scale of 1 to 5" %>
    <%= f.number_field :nausea%>
    <br>
    <%= f.label :tickets, "How much money you have" %>
    <%= f.number_field :tickets %>
    <br>
    <%= f.label :admin, "Check if you are an owner" %>
    <%= f.check_box :admin %>
    <br>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <br>
    <%= f.submit %>
<% end %>